{
  "name": "noximo/dbgr",
  "description": "Versatile alternative for var_dump",
  "keywords": [
    "var_dump",
    "dump",
    "debug"
  ],
  "type": "library",
  "authors": [
    {
      "name": "Tomas Pospisil",
      "email": "pospisilt@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "noximo\\": "src/"
    }
  },
  "require": {
    "php": ">= 7.2",
    "tracy/tracy": "^2.5",
    "ext-json": "*",
    "nette/utils": "^2.5",
  },
  "license": "MIT",
  "require-dev": {
    "phpstan/phpstan": "^0.10.5",
    "symplify/easy-coding-standard": "^5.1"
  },
  "scripts": {
    "complete-check": [
      "@check-cs",
      "@phpstan"
    ],
    "check-cs": "vendor/bin/ecs check src",
    "fix-cs": "vendor/bin/ecs check src --fix",
    "phpstan": "vendor/bin/phpstan analyse src --level max"
  }
}
